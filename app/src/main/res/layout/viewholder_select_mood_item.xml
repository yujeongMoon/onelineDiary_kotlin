<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emoji_layout"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emoji_select"
        android:layout_width="@dimen/diary_select_check_width"
        android:layout_height="@dimen/diary_select_check_height"
        android:layout_marginBottom="@dimen/diary_select_interval"
        android:src="@drawable/check_icon"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="@dimen/diary_select_emoji_width"
        android:layout_height="@dimen/diary_select_emoji_height"
        android:src="@drawable/happy"/>

</LinearLayout>